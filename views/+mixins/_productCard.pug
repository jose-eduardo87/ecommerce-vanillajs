mixin productCard(product)
    .col-lg-3.col-sm-4.product(data-product-id= product._id)
        .product__img-holder
            a.product__link(href=`/product/${product.sex}/${product.slug}` aria-label= product.name)
                img.product__img(src= `/img/products/${product.images[0]}` alt='Product Image')
                img.product__img-back(src= `/img/products/${product.images[0]}` alt='Product Image')
            .product__actions
                button.button__action.button-cart.product__quickview
                    i.ui-bag
                    span Cart
                button.button__action.button-wishlist.product__add-to-wishlist
                    i.ui-heart
                    span Wishlist
        .product__details
            h3.product__title
                a(href=`/product/${product.sex}/${product.slug}`)= product.name
        span.product__price
            ins
                span.amount= `$ ${product.price}`